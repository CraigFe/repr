(executable
 (name fuzz_types)
 (libraries digestif.c crowbar irmin)
 (preprocess (pps ppx_deriving.show)))

(rule
 (alias fuzz)
 (deps (source_tree ./input) fuzz_types.exe)
 (action
  (run afl-fuzz -i ./input -o output ./fuzz_types.exe @@)))

(rule
 (alias runtest)
 (package irmin-fuzz)
 (deps fuzz_types.exe)
 (action progn))
