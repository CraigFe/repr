(executable
 (name main)
 (libraries irmin bechamel fpath yojson ppx_deriving_yojson.runtime unix)
 (preprocess
  (pps ppx_deriving_yojson)))

(rule
 (alias bench)
 (package irmin-bench)
 (deps main.exe)
 (action (progn)))

;; Require [main.ml] to compile during tests

(rule
 (alias runtest)
 (package irmin-bench)
 (deps main.exe)
 (action progn))

(rule
 (alias runbench)
 (package irmin-bench)
 (deps (universe))
 (targets ./data)
 (action
  (run %{exe:main.exe} --output-dir ./data)))
